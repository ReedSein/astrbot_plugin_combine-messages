{
  "enabled": {
    "description": "是否启用消息合并",
    "type": "bool",
    "default": true
  },
  "wait_time": {
    "description": "合并等待窗口（秒）",
    "hint": "收到第一条消息后，绝对等待多少秒再发送。建议 1.5 ~ 3.0 秒。只要在这个时间内发的消息，都会被打包成一条。",
    "type": "float",
    "default": 2.0
  },
  "block_prefixes": {
    "description": "屏蔽前缀列表",
    "hint": "以这些符号开头的消息直接放行（不合并），通常用于指令。",
    "type": "list",
    "items": {
      "type": "string"
    },
    "default": ["/", "!", "！", ".", "。", "#", "%"]
  },
  "extra_commands": {
    "description": "额外屏蔽指令",
    "type": "list",
    "items": {
      "type": "string"
    },
    "default": ["llm", "help", "reset"]
  }
}
